.page {
  background: #f6f7fb;
  color: #111;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.rowRight {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
}

.muted {
  color: #888;
  font-size: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
}

.btn {
  margin-top: 12rpx;
}

/* --- Theme toggle icon --- */
.themeIcon {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 999px;
  font-size: 30rpx;
  color: #333;
  background: rgba(0,0,0,0.06);
}
.themeIconHover {
  opacity: 0.85;
}

/* --- Dark theme overrides --- */
.page.theme-dark {
  background: #0f1115;
  color: #eaeaea;
}
.page.theme-dark .card {
  background: #161a22;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.25);
}
.page.theme-dark .muted {
  color: #a8b0bd;
}
.page.theme-dark .title {
  color: #eaeaea;
}
.page.theme-dark button {
  background: #2a2f3a !important;
  color: #eaeaea !important;
}
.page.theme-dark .themeIcon {
  color: #eaeaea;
  background: rgba(255,255,255,0.10);
}

/* --- Calendar styles (Chart 10) --- */
.cal-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}
.cal-head {
  text-align: center;
  color: #666;
  font-size: 24rpx;
  padding: 6rpx 0;
}
.cal-cell {
  background: #f6f7fb;
  border-radius: 10rpx;
  padding: 8rpx;
  min-height: 86rpx;
}
.cal-cell.empty {
  background: transparent;
}
.cal-cell.trade {
  background: #eef4ff;
}
.cal-day {
  font-size: 22rpx;
  color: #666;
}
.cal-ret {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #111;
}
.cal-cell.trade.pos .cal-ret { color: #c62828; } /* 正收益：红 */
.cal-cell.trade.neg .cal-ret { color: #2e7d32; } /* 负收益：绿 */

.mon-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 10rpx;
  margin-top: 8rpx;
}
.mon-cell {
  background: #f6f7fb;
  border-radius: 10rpx;
  padding: 10rpx;
  min-height: 88rpx;
}
.mon-cell.pos { background: #fdeeee; } /* 正收益：红 */
.mon-cell.neg { background: #eef7ee; } /* 负收益：绿 */
.mon-title { font-size: 24rpx; color: #333; }
.mon-ret { margin-top: 6rpx; font-size: 24rpx; }
.mon-cell.pos .mon-ret { color: #c62828; } /* 正收益：红 */
.mon-cell.neg .mon-ret { color: #2e7d32; } /* 负收益：绿 */

.yr-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 10rpx;
}
.yr-cell {
  background: #f6f7fb;
  border-radius: 10rpx;
  padding: 12rpx;
  min-height: 92rpx;
}
.yr-cell.pos { background: #fdeeee; } /* 正收益：红 */
.yr-cell.neg { background: #eef7ee; } /* 负收益：绿 */
.yr-title { font-size: 26rpx; font-weight: 600; color: #111; }
.yr-ret { margin-top: 8rpx; font-size: 24rpx; }
.yr-cell.pos .yr-ret { color: #c62828; } /* 正收益：红 */
.yr-cell.neg .yr-ret { color: #2e7d32; } /* 负收益：绿 */

/* --- Floating tooltip for interactive charts --- */
.canvasWrap {
  position: relative;
}
.tip {
  position: absolute;
  max-width: 80%;
  padding: 10rpx 12rpx;
  border-radius: 10rpx;
  background: rgba(0, 0, 0, 0.72);
  color: #fff;
  font-size: 22rpx;
  line-height: 1.35;
  white-space: pre-line;
  pointer-events: none;
  z-index: 10;
}

/* --- Crosshair overlay for interactive charts --- */
.crossV {
  position: absolute;
  pointer-events: none;
  z-index: 9;
}
.crossV {
  top: 0;
  width: 1px;
  background: rgba(22, 119, 255, 0.95); /* high-contrast blue */
  box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.55);
}

.page.theme-dark .tip {
  background: rgba(0, 0, 0, 0.82);
  color: #fff;
}
.page.theme-dark .crossV {
  background: rgba(138, 180, 255, 0.95);
  box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.65);
}

/* single-line rows (truncate with ellipsis) */
.line-ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* --- Bottom navigation (custom, 6 items) --- */
.bottomNav {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 12rpx 16rpx calc(env(safe-area-inset-bottom) + 12rpx);
  background: rgba(255, 255, 255, 0.98);
  border-top: 1px solid rgba(0,0,0,0.06);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8rpx;
  z-index: 99;
}
.navItem {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  padding: 12rpx 0;
  border-radius: 999px;
  color: #333;
  background: rgba(0,0,0,0.04);
}
.navItemActive {
  color: #fff;
  background: #1677ff;
}
.navItemHover {
  opacity: 0.85;
}

.page.theme-dark .bottomNav {
  background: rgba(15, 17, 21, 0.98);
  border-top: 1px solid rgba(255,255,255,0.10);
}
.page.theme-dark .navItem {
  color: #eaeaea;
  background: rgba(255,255,255,0.10);
}
.page.theme-dark .navItemActive {
  color: #0f1115;
  background: #8ab4ff;
}

/* Calendar dark theme */
.page.theme-dark .cal-head { color: #a8b0bd; }
.page.theme-dark .cal-cell { background: #1b2030; }
.page.theme-dark .cal-cell.trade { background: #1b2a45; }
.page.theme-dark .cal-day { color: #a8b0bd; }
.page.theme-dark .cal-ret { color: #eaeaea; }
.page.theme-dark .cal-cell.trade.pos .cal-ret { color: #ff6b6b; }
.page.theme-dark .cal-cell.trade.neg .cal-ret { color: #6be6a6; }
.page.theme-dark .mon-cell { background: #1b2030; }
.page.theme-dark .mon-title { color: #eaeaea; }
.page.theme-dark .yr-cell { background: #1b2030; }
.page.theme-dark .yr-title { color: #eaeaea; }
