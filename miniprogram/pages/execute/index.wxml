<view class="page">
  <view class="card">
    <view class="row">
      <view class="title">{{label}} 执行确认</view>
      <view class="muted">{{tradeDate}}</view>
    </view>
    <view class="muted" style="margin-top: 6rpx;">当前：{{currentCode || "现金"}} → 目标：{{targetCode || "-"}}</view>
    <view style="margin-top: 12rpx;">
      <view class="title" style="font-size:28rpx;">卖出</view>
      <block wx:for="{{sells}}" wx:key="code">
        <view class="muted">{{item.side}} {{item.code}}</view>
      </block>
    </view>
    <view style="margin-top: 12rpx;">
      <view class="title" style="font-size:28rpx;">买入</view>
      <block wx:for="{{buys}}" wx:key="code">
        <view class="muted">{{item.side}} {{item.code}}</view>
      </block>
    </view>
    <button class="btn" type="primary" bindtap="onConfirm">一键确认</button>
    <button class="btn" size="mini" bindtap="onRefresh">刷新预览</button>
  </view>
</view>

